<div class="container">
  <div class="col-md-6">
    <div class="well">
      <h1>New Will</h1>
      <%= simple_form_for @will do |f| %>
        <%= f.input :title %>
        <%= f.input :date %>
        <%= f.input :executor %>
        <%= f.input :estate_plan %>
        <%= f.input :comments %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
