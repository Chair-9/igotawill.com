<div class="container">
  <ul class="breadcrumb">
  <li> <%= link_to "Dashboard", root_path%></li>
    <li class="active"><%= @contact.full_name %></li>
  </ul>
  <br />
  <div class="jumbotron">
    <h1>Contact Info for <%= @contact.full_name %></h1>
      <dl class="dl-horizontal">
        <dt>Address</dt>
        <dd><%= @contact.address_line_1 %></dd>
        <dt>Address Line 2</dt>
        <dd><%= @contact.address_line_2 %></dd>
        <dt>City</dt>
        <dd><%= @contact.city %></dd>
        <dt>State</dt>
        <dd><%= @contact.state %></dd>
        <dt>Zip Code</dt>
        <dd><%= @contact.postal_code %></dd>
      </dl>
      <br />
      <%= link_to "Edit Contact", edit_contact_path, class: "btn btn-primary" %>
      <%= link_to  "Delete", contact_path(@contact), method: :delete, class: "btn btn-danger",data: { confirm: "Are you sure?" }  %>
  </div>
</div>
