<div class="container">
  <ul class="breadcrumb">
  <li><%= link_to "Dashboard", root_path%></li>
    <li class="active"><%= @next_of_kin.full_name %></li>
  </ul>
  <br />
  <div class="jumbotron">
    <h1>Contact Info for <%= @next_of_kin.full_name %></h1>
      <dl class="dl-horizontal">
        <dt>Phone</dt>
        <dd><%= @next_of_kin.phone %></dd>
        <dt>Email</dt>
        <dd><%= @next_of_kin.email %></dd>
      </dl>
      <br />
      <%= link_to "Edit Next of Kin", edit_next_of_kin_path, class: "btn btn-primary" %>
      <%= link_to  "Delete", next_of_kin_path(@next_of_kin), method: :delete, class: "btn btn-danger",data: { confirm: "Are you sure?" }  %>
  </div>
</div>
