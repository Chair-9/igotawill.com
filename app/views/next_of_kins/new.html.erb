<div class="container">
  <div class="col-md-8 col-sm-offset-2">
    <div class="well">
      <h1>Next of Kin</h1>
      <%= simple_form_for @next_of_kin do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone %>
        <%= f.input :email %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
