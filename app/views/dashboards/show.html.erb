<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well">
        <div class="pull-right">
          <%= link_to "Update Contact Info", new_contact_path, class: "btn btn-primary" %>
        </div>
        <h1>Step 1: Contact Info</h1>
        <% @contacts.each do |contact| %>
          <ul>
            <li><%= link_to contact.full_name, contact_path(contact) %></li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="well">
        <div class="pull-right">
          <%= link_to "Create New Next of Kin", new_next_of_kin_path, class: "btn btn-primary" %>
        </div>
        <h1>Step 2: Next of Kin</h1>
        <% @next_of_kins.each do |next_of_kin| %>
          <ul>
            <li><%= link_to next_of_kin.full_name, next_of_kin_path(next_of_kin) %></li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="well">
        <div class="pull-right">
          <%= link_to "Create New Will", new_will_path, class: "btn btn-primary" %>
        </div>
        <h1>Step 3: Will</h1>
        <% @wills.each do |will| %>
          <ul>
            <li><%= link_to will.title, will_path(will) %></li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="well">
        <p> <%= link_to "Publish Will and Sign with Blockchain", root_path, class: "btn btn-primary btn-lg btn-block", data: { confirm: "This is where the customer will pay the annual plan, generate a pdf, e-sign with BlockSign API, prompt for two witnesses signatures.  The Will will print to pdf and also save to the Blockchain digital ledger. This version of the Will can be retrieved by the encrypted address given to the owner of the Will."} %> </p>
      </div>
    </div>
  </div>
</div>
